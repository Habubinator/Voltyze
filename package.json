  "scripts": {
    "build": "npx tsc && npx tsc-alias",
    "cold": "npm run build && npm start",
    "commit": "npx cz",
    "db:seed": "node cli/seed.js",
    "dev": "nodemon --watch \"src/\" --ext \"ts,json\" --ignore \"src//*.spec.ts\" --exec \"npx tsx src/index.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"locales/*.json\"",
    "husky:prepare": "husky",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:start": "pm2 start",
    "prune:sessions": "node cli/prune-sessions.js",
    "start": "node dist/index.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --forceExit",
    "test:watch": "jest --watch"
  },
